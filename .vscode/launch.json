    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run main",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go"
        },
        {
            "name": "Run List",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["list"]
        },
        {
            "name": "Run Open",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["list", "open"]
        },
        {
            "name": "Run Closed",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["list", "closed", "--profile=default"]
        },
        {
            "name": "Testing",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["list", "open"]
        }
    ]
}
